<div class="row">
              <div class="col-md-12">
                <div class="main-card mb-3 card">
                  <div class="card-header">
                    Listado
                    @* <div class="btn-actions-pane-right">
                      <div role="group" class="btn-group-sm btn-group">
                        <button class="active btn btn-focus">Last Week</button>
                        <button class="btn btn-focus">All Month</button>
                      </div>
                    </div> *@
                  </div>
                  <div class="table-responsive">
                    <table
                      class="align-middle mb-0 table table-borderless table-striped table-hover"
                    >
                      <thead>
                        <tr>
                          <th class="text-center">#</th>
                          <th>Nombre</th>
                          <th class="text-center">Género</th>
                          <th class="text-center">ISBN</th>
                          <th class="text-center">Estado</th>
                        </tr>
                      </thead>
                      <tbody>
                        @{int i = 1;}
                        @foreach (var item in Model)
                        {
                        <tr>
                          <td class="text-center text-muted">@i</td>
                          <td>
                            <div class="widget-content p-0">
                              <div class="widget-content-wrapper">
                                <div class="widget-content-left mr-3">
                                  <div class="widget-content-left">
                                    <img
                                      width="40"
                                      class="rounded-circle"
                                      src="assets/images/avatars/4.jpg"
                                      alt=""
                                    />
                                  </div>
                                </div>
                                <div class="widget-content-left flex2">
                                  @* <div class="widget-heading">John Doe</div> *@
                                  <div class="widget-subheading opacity-7">
                                    @item.Nombre
                                  </div>
                                </div>
                              </div>
                            </div>
                          </td>
                          <td class="text-center">@item.GeneroNombre</td>
                          <td class="text-center">@item.ISBN</td>
                          <td class="text-center">
                            @if (@item.Estado)
                            {
                              <div class="badge badge-warning">Prestado</div> 
                            }else
                            {
                              <div class="badge badge-success">Disponible</div>
                              }
                            
                          </td>
                          <td class="text-center">
                            <a class="btn btn-sm no-a-decoration" asp-controller="Libro" asp-action="Crear" asp-route-id="@item.IdBook">
                            <button
                              type="button"
                              id="PopoverCustomT-1"
                              class="btn btn-primary btn-sm"
                            >
                              <i class="pe-7s-note btn-icon-wrapper"></i>
                            </button>
                            </a>
                            <button type="submit" onclick="return confirm(&quot;Confirme eliminación de este libro?&quot;)" class="mr-2 btn-icon btn-icon-only btn btn-outline-danger">
                              <i class="pe-7s-trash btn-icon-wrapper"> </i>
                            </button>
                          </td>
                        </tr>
                        i++;
                        }
                      </tbody>
                    </table>
                  </div>
                  <div class="d-block text-center card-footer">
                    <button class="btn-wide btn btn-success">Save</button>
                  </div>
                </div>
              </div>
            </div>

</div>
